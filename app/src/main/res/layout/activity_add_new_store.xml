<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    tools:context="com.android.odevler.arifumutsepetci.data.store.AddNewStoreActivity">
    <TextView
        android:id="@+id/text_view_store"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Yeni Dükkan Ekle"
        app:layout_constraintTop_toTopOf="parent" />
    <EditText
        android:id="@+id/edit_text_store_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Dükkanın ID'si"
        app:layout_constraintTop_toBottomOf="@+id/text_view_store" />
    <EditText
        android:id="@+id/edit_text_store_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Dükkanın Adı"
        app:layout_constraintTop_toBottomOf="@+id/edit_text_store_id" />
    <EditText
        android:id="@+id/edit_text_store_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Dükkanın Adresi"
        app:layout_constraintTop_toBottomOf="@+id/edit_text_store_name" />

    <Button
        android:id="@+id/button_store_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kaydet"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>