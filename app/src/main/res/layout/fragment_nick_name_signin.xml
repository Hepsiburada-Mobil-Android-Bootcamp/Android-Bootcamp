<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E5E3DD">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/editNickName"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:text="Sign Up"
            android:fontFamily="sans-serif-medium"
            android:textSize="48sp"
            android:textColor="#000000"/>

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editNickName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/ic_rectangle"
            android:backgroundTint="#F5F4F2"
            android:hint="User Name"
            android:paddingLeft="20dp"
            android:textSize="22sp"
            android:fontFamily="sans-serif-medium"
            app:layout_constraintBottom_toTopOf="@+id/buttonNickNameSignIn"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editNickNamePassword"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/ic_rectangle"
            android:backgroundTint="#F5F4F2"
            android:fontFamily="sans-serif-medium"
            android:hint="Password"
            android:paddingLeft="20dp"
            android:textSize="22sp"
            app:layout_constraintTop_toBottomOf="@+id/editNickName" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonNickNameSignIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_rectangle"
            android:backgroundTint="#241C1C"
            android:layout_marginBottom="80dp"
            android:text="sÄ±gn Up"
            android:fontFamily="sans-serif-medium"
            android:textColor="#F5F4F2"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editNickNamePassword"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />




    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>