<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    tools:context="com.android.odevler.mehmet_serkan_guzel.language.AddNewLanguageActivity">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/languageNameText_input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Dil adı.."
        app:counterEnabled="true"
        app:counterMaxLength="40"
        android:layout_marginTop="32dp"
        app:helperText="Örnek: English, US"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/languageNameEditText_input_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/button_save_language"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="28dp"
        android:text="Kaydet"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/codeTextInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Dil kodu"
        app:counterEnabled="true"
        app:counterMaxLength="6"
        android:layout_marginTop="32dp"
        app:helperText="Örnek: en-rUS."
        app:layout_constraintEnd_toEndOf="@+id/languageNameText_input_layout"
        app:layout_constraintStart_toStartOf="@+id/languageNameText_input_layout"
        app:layout_constraintTop_toBottomOf="@+id/languageNameText_input_layout">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/codeEditTextInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </com.google.android.material.textfield.TextInputLayout>



</androidx.constraintlayout.widget.ConstraintLayout>