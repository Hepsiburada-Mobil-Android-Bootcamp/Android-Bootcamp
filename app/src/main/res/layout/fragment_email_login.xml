<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black"
    tools:context=".firebase.auth.email_auth.EmailLoginFragment">


    <TextView

        android:layout_marginTop="12dp"
        android:id="@+id/loginText"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:text="@string/login_email_buton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginTop="14dp"

        android:text="@string/email_login"
        android:textColor="#FFD700"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@id/emailText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loginText"
        app:layout_constraintVertical_bias="0.617" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/emailText"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="96dp"
        android:background="@drawable/corner_radious_bg"
        android:hint="@string/email_login"
        android:textAlignment="center"
        android:layout_marginStart="14dp"
        android:textColor="@color/black"
        android:layout_marginEnd="14dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="-8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:text="@string/password_email_login"
        android:textColor="#FFD700"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/passwordText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emailText" />
    <com.google.android.material.textfield.TextInputEditText
        android:textAlignment="center"
        android:background="@drawable/corner_radious_bg"
        android:id="@+id/passwordText"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/emailText"
        android:hint="@string/password_email_login"
        android:layout_marginStart="14dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="14dp"/>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:gravity="center"
       android:layout_marginTop="14dp"
        app:layout_constraintTop_toBottomOf="@+id/relatively"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/facebook"
            android:layout_margin="6dp"
            android:layout_width="25dp"
            android:layout_height="25dp"

            android:src="@drawable/facebook"/>
        <ImageView
            android:id="@+id/twitter"
            android:layout_margin="6dp"
            android:layout_width="25dp"
            android:layout_height="25dp"

            android:src="@drawable/twitter"/>
        <ImageView
            android:id="@+id/game_center"
            android:layout_margin="6dp"
            android:layout_width="25dp"
            android:layout_height="25dp"

            android:src="@drawable/gamecenter"/>
        <ImageView
            android:id="@+id/github"
            android:layout_margin="6dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/corner_radious_bg"
            android:src="@drawable/github"/>
        <ImageView
            android:id="@+id/microsoft"
            android:layout_margin="6dp"
            android:layout_width="25dp"
            android:layout_height="25dp"

            android:src="@drawable/microsoft"/>
        <ImageView
            android:id="@+id/yahoo"
            android:layout_margin="6dp"
            android:layout_width="25dp"
            android:layout_height="25dp"

            android:src="@drawable/yahoo"/>
        <ImageView
            android:id="@+id/googleplaygames"
            android:layout_margin="6dp"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/googleplaygames"/>
        <ImageView
            android:id="@+id/search"
            android:layout_margin="6dp"
            android:layout_width="25dp"
            android:layout_height="25dp"

            android:src="@drawable/search"/>
        <ImageView
            android:id="@+id/anonymous"
            android:layout_margin="6dp"
            android:layout_width="25dp"
            android:layout_height="25dp"

            android:src="@drawable/anonymous"/>

        <ImageView
            android:id="@+id/phonecall"
            android:layout_margin="6dp"
            android:layout_width="25dp"
            android:layout_height="25dp"

            android:src="@drawable/phonecall"/>


    </LinearLayout>
    <TextView
        android:id="@+id/member"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/not_a_member_yet"/>
    <TextView
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center"
        android:textAlignment="center"
        android:text="@string/login_email_buton"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_margin="14dp"
        android:id="@+id/loginBttn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/corner_radious_bg_btn"
        app:layout_constraintTop_toBottomOf="@id/linearLayout"/>




    <RelativeLayout
        android:id="@+id/relatively"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginTop="12dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent
"
        app:layout_constraintTop_toBottomOf="@+id/passwordText">


        <TextView
            android:id="@+id/tvText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/or_login_with_email"
            android:textColor="#FFFFFF"
            tools:layout_editor_absoluteX="188dp"
            tools:layout_editor_absoluteY="209dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/tvText"
            android:background="#FFD700"
            tools:layout_editor_absoluteX="9dp"
            tools:layout_editor_absoluteY="218dp" />
        <View
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tvText"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#FFD700"
            tools:layout_editor_absoluteX="9dp"
            tools:layout_editor_absoluteY="218dp" />


    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>