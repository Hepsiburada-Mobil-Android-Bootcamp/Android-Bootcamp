<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    tools:context="com.android.odevler.mehmet_serkan_guzel.AddNewFootballActivity">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/footballText_input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Takım ismi.."
        app:counterEnabled="true"
        app:counterMaxLength="20"
        app:helperText="Futbol takımı olmalıdır."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/footballeditText_input_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/button_save_football"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="Kaydet"
        app:layout_constraintEnd_toEndOf="@+id/footballText_input_layout"
        app:layout_constraintStart_toStartOf="@+id/footballText_input_layout"
        app:layout_constraintTop_toBottomOf="@+id/footballText_input_layout" />
</androidx.constraintlayout.widget.ConstraintLayout>