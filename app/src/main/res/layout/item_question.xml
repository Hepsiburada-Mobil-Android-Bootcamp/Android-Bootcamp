<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/text_view_question"
        tools:text="Soru ?"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <RadioGroup
        android:layout_marginTop="10dp"
        android:id="@+id/radi_group"
        app:layout_constraintTop_toBottomOf="@+id/text_view_question"
        app:layout_constraintStart_toStartOf="@+id/text_view_question"
        app:layout_constraintEnd_toEndOf="@+id/text_view_question"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/radio_button_a"
            tools:text="A: şıkkı"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <RadioButton
            android:id="@+id/radio_button_b"
            tools:text="B: şıkkı"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <RadioButton
            android:id="@+id/radio_button_c"
            android:layout_width="match_parent"
            tools:text="C: şıkkı"
            android:layout_height="wrap_content"/>

        <RadioButton
            android:id="@+id/radio_button_d"
            android:layout_width="match_parent"
            tools:text="D: şıkkı"
            android:layout_height="wrap_content"/>

        <RadioButton
            android:id="@+id/radio_button_e"
            tools:text="E: şıkkı"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </RadioGroup>
</androidx.constraintlayout.widget.ConstraintLayout>