<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/editTextbookCategory"
        android:layout_width="371dp"
        android:layout_height="49dp"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:hint="Category"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="@+id/editTextyearOfPublication"
        app:layout_constraintTop_toBottomOf="@+id/editTextyearOfPublication" />

    <EditText
        android:id="@+id/editTextauthorName"
        android:layout_width="367dp"
        android:layout_height="44dp"
        android:layout_marginTop="38dp"
        android:ems="10"
        android:hint="Author Name"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="@+id/editTextbookCategory"
        app:layout_constraintTop_toBottomOf="@+id/editTextbookCategory" />

    <EditText
        android:id="@+id/editTextyearOfPublication"
        android:layout_width="375dp"
        android:layout_height="50dp"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:hint="Year Of Publication"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="@+id/editTextbookTitle"
        app:layout_constraintTop_toBottomOf="@+id/editTextbookTitle" />

    <EditText
        android:id="@+id/editTextbookTitle"
        android:layout_width="377dp"
        android:layout_height="49dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="52dp"
        android:ems="10"
        android:hint="Book Title"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonKaydet"
        android:layout_width="285dp"
        android:layout_height="41dp"
        android:layout_marginTop="32dp"
        android:text="Add"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextauthorName" />
</androidx.constraintlayout.widget.ConstraintLayout>