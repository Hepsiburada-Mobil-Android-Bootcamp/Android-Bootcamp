<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/input_book_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginTop="56dp"
        android:hint="kitap adı giriniz"
        android:minHeight="48dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp" />

    <EditText
        android:id="@+id/input_book_writer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="kitabın yazarını giriniz"
        android:minHeight="48dp"
        app:layout_constraintTop_toBottomOf="@+id/input_book_name"
        tools:layout_editor_absoluteX="16dp" />

    <EditText
        android:id="@+id/input_book_page"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginTop="92dp"
        android:hint="sayfa sayısı"
        android:minHeight="48dp"
        app:layout_constraintTop_toBottomOf="@+id/input_book_writer"
        tools:layout_editor_absoluteX="10dp" />

    <EditText
        android:id="@+id/input_book_year"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginTop="84dp"
        android:hint="yılı"
        android:minHeight="48dp"
        app:layout_constraintTop_toBottomOf="@+id/input_book_page"
        tools:layout_editor_absoluteX="16dp" />

    <Button
        android:id="@+id/button_save"
        android:layout_width="221dp"
        android:layout_height="54dp"
        android:layout_marginTop="40dp"
        android:text="Save"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input_book_year"
        app:layout_constraintVertical_bias="0.146" />
</androidx.constraintlayout.widget.ConstraintLayout>