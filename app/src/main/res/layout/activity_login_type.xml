<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".logintype.LoginTypeActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/button_email_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/email"
            app:layout_constraintTop_toTopOf="parent" />
        <Button
            android:id="@+id/button_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/phone_number"
            app:layout_constraintTop_toBottomOf="@+id/button_email_password"/>
        <Button
            android:id="@+id/button_anonymous"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Anonymous"
            app:layout_constraintTop_toBottomOf="@+id/button_phone"/>
        <Button
            android:id="@+id/button_google"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Google"
            app:layout_constraintTop_toBottomOf="@+id/button_anonymous"/>
        <Button
            android:id="@+id/button_apple"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Apple"
            app:layout_constraintTop_toBottomOf="@+id/button_google"/>
        <Button
            android:id="@+id/button_yahoo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Yahoo"
            app:layout_constraintTop_toBottomOf="@+id/button_apple"/>
        <Button
            android:id="@+id/button_facebook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Facebook"
            app:layout_constraintTop_toBottomOf="@+id/button_yahoo"/>
        <Button
            android:id="@+id/button_github"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Github"
            app:layout_constraintTop_toBottomOf="@+id/button_facebook"/>
        <Button
            android:id="@+id/button_play_games"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Play Games"
            app:layout_constraintTop_toBottomOf="@+id/button_github"/>
        <Button
            android:id="@+id/button_microsoft"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Microsoft"
            app:layout_constraintTop_toBottomOf="@+id/button_play_games"/>
        <Button
            android:id="@+id/button_game_center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Game Center"
            app:layout_constraintTop_toBottomOf="@+id/button_microsoft"/>
        <Button
            android:id="@+id/button_twitter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Apple"
            app:layout_constraintTop_toBottomOf="@+id/button_game_center"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>