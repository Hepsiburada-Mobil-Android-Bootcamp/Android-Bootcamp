<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textpower"
        android:text="Power Supply:"
        android:textSize="24sp"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/power"
        android:layout_marginLeft="10dp"
        android:hint="Power Supply"
        android:textSize="24sp"
        android:textColor="#000000"
        app:layout_constraintStart_toEndOf="@id/textpower"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textscreen"
        android:text="Screen Model:"
        android:textSize="24sp"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/power"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/screen"
        android:layout_marginLeft="10dp"
        android:hint="Screen Model"
        android:textSize="24sp"
        android:textColor="#FF3D00"
        app:layout_constraintStart_toEndOf="@id/textscreen"
        app:layout_constraintTop_toBottomOf="@id/power"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textMotherBoard"
        android:text="Mother Board:"
        android:textSize="24sp"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/screen"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/motherBoard"
        android:layout_marginLeft="10dp"
        android:hint="Mother Board"
        android:textSize="24sp"
        android:textColor="#FF3D00"
        app:layout_constraintStart_toEndOf="@id/textMotherBoard"
        app:layout_constraintTop_toBottomOf="@id/screen"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textRam"
        android:text="Ram: "
        android:textSize="24sp"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/motherBoard"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ram"
        android:layout_marginLeft="10dp"
        android:hint="Ram"
        android:textSize="24sp"
        android:textColor="#FF3D00"
        app:layout_constraintStart_toEndOf="@id/textRam"
        app:layout_constraintTop_toBottomOf="@id/motherBoard"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textKeyboard"
        android:text="Keyboard: "
        android:textSize="24sp"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ram"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/keyboard"
        android:layout_marginLeft="10dp"
        android:hint="Keyboard"
        android:textSize="24sp"
        android:textColor="#FF3D00"
        app:layout_constraintStart_toEndOf="@id/textKeyboard"
        app:layout_constraintTop_toBottomOf="@id/ram"/>

</androidx.constraintlayout.widget.ConstraintLayout>